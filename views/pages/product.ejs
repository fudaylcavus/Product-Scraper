        <div class="center">
            <table border="1" style="text-align: center;">
                <tr>
                    <td colspan="2"><img src="<%= product.img_src %>" alt="product"></td>
                </tr>       
                <tr>
                    <td>ID: </td>
                    <td><%= product.id %></td>
                </tr>
                <tr>
                    <td>Title</td>
                    <td><%= product.title %></td>
                </tr>
                <tr>
                    <td width="20%">Price: </td>
                    <td width="80%"><%= "Â£" +product.price.toFixed(2) %></td>
                </tr>
